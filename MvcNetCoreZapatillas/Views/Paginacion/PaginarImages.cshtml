@model MvcNetCoreZapatillas.Models.VistaImagenesZapatilla

@{
    ViewData["Title"] = "PaginarImages";
}

<h2 style="color:red">
    Imagen @Model.Posicion de @ViewData["ULTIMO"]
</h2>

<h1>PaginarImages</h1>

<li class="list-group-item"><img src="@Model.Imagen" /></li>

<ul class="list-group list-group-horizontal">
    <li class="list-group-item">
        <a asp-controller="Paginacion"
           asp-action="PaginarRegistroVistaDepartamento"
           asp-route-posicion="1">
            Primero
        </a>
    </li>
    <li class="list-group-item">
        <a asp-controller="Paginacion"
           asp-action="PaginarRegistroVistaDepartamento"
           asp-route-posicion="@ViewData["ANTERIOR"]">
            Anterior
        </a>
    </li>
    <li class="list-group-item">
        <a asp-controller="Paginacion"
           asp-action="PaginarRegistroVistaDepartamento"
           asp-route-posicion="@ViewData["SIGUIENTE"]">
            Siguiente
        </a>
    </li>
    <li class="list-group-item">
        <a asp-controller="Paginacion"
           asp-action="PaginarRegistroVistaDepartamento"
           asp-route-posicion="@ViewData["ULTIMO"]">
            Ultimo
        </a>
    </li>
</ul>
